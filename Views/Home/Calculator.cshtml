@{
    ViewData["Title"] = "Tutoring Calculator - Monster Hunter Wilds Academy";
}

<div class="content-box">
    <h2>Monster Hunter Wilds Tutoring Services</h2>
    <div class="calculator-container">
        <p style="text-align: center;">
            Need help conquering the Windward Plains or mastering the Scarlet Forest? Whether you're struggling with Wilds' dynamic weather system, want to learn advanced Seikret mounting techniques, or need guidance on the new focus mode combat mechanics, I'm here to help! Calculate the cost for personalized Monster Hunter Wilds tutoring sessions below.
        </p>

        <form id="calculatorForm">
            <div class="form-group">
                <label for="hours">Number of Hours Needed:</label>
                <input type="number" id="hours" name="hours" placeholder="Enter hours (e.g., 2.5)" step="0.5" min="0.5">
                <div id="hoursError" class="error-message"></div>
            </div>

            <div class="form-group">
                <label for="hourlyRate">Hourly Rate:</label>
                <input type="text" id="hourlyRate" name="hourlyRate" value="$15.00" readonly>
            </div>

            <button type="button" id="calculateBtn" onclick="calculateTotal()">Calculate Total Cost</button>

            <div class="result-box" id="resultBox" style="display: none;">
                <div class="form-group">
                    <label for="totalCost">Total Cost:</label>
                    <input type="text" id="totalCost" name="totalCost" readonly>
                </div>
            </div>
        </form>
    </div>
</div>
